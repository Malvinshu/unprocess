<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.reilandeubank.unprocess.utils.AutoFitSurfaceView
        android:id="@+id/view_finder"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="@android:color/transparent" />



    <!--Manual focus slider (Vertical - Left)-->
    <SeekBar
        android:id="@+id/focus_slider"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:rotation="270"
        android:layout_gravity="center|left"
        android:layout_marginStart="-120dp"
        android:max="100"
        android:progress="0" />

    <!--Duplicate Manual focus slider (Vertical - Right)-->
    <SeekBar
        android:id="@+id/focus_slider_duplicate"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:rotation="270"
        android:layout_gravity="center|right"
        android:layout_marginStart="-120dp"
        android:max="100"
        android:progress="0" />

    <!-- Focus Indicator Texts -->
    <TextView
        android:id="@+id/focus_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="40dp"
        android:text="AF Mode"
        android:textColor="#FFFFFF"
        android:background="#80000000"
        android:padding="8dp"/>

    <LinearLayout
        android:id="@+id/controls_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:layout_marginEnd="26dp"
        android:orientation="vertical"
        android:visibility="visible"
        >

        <TextView
        android:id="@+id/iso_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ISO"
        android:textColor="@android:color/black"
        android:layout_gravity="center"/>

        <NumberPicker
            android:id="@+id/iso_picker"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:theme="@style/Theme.AppCompat.DayNight"
            android:layout_gravity="center"
            />
        <!--buffer for shutter button. Divide the set the vertical distance between NumberPicker-->
        <ImageButton
            android:id="@+id/capture_button"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_shutter"
            android:contentDescription="@string/capture"
            android:rotation="0"
            android:scaleType="fitCenter" />

        <NumberPicker
            android:id="@+id/shutter_speed_picker"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:theme="@style/Theme.AppCompat.DayNight"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/shutter_speed_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Speed"
            android:textColor="@android:color/black"/>
    </LinearLayout>

</FrameLayout>